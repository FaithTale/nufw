nuauth20:
	@echo "--- Building: $@"
	dh_installdirs           -p$@ -P$(b)/$@ 
	dh_testdir -p$@ -P$(b)/$@
	dh_testroot -p$@ -P$(b)/$@
	dh_installchangelogs -p$@ -P$(b)/$@ ChangeLog 
	dh_installdocs -p$@ -P$(b)/$@
	dh_installexamples -p$@ -P$(b)/$@
	mkdir -p $(CURDIR)/debian/$@/etc/nufw20/
	dh_install -p$@
	sed -e "sµ^ *nuauth_tls_key=.*µnuauth_tls_key=\"/etc/nufw20/certs/nuauth-key.pem\"µ" \
	    -e "sµ^ *nuauth_tls_cert=.*µnuauth_tls_cert=\"/etc/nufw20/certs/nuauth-cert.pem\"µ" \
	    -e "sµ^ *plaintext_aclfile=.*µplaintext_aclfile=\"/etc/nufw20/acls.nufw\"µ" \
	    -e "sµ^ *plaintext_userfile=.*µplaintext_userfile=\"/etc/nufw20/users-plaintext.nufw\"µ" \
	     < $(CURDIR)/conf/nuauth.conf >$(CURDIR)/debian/$@/etc/nufw20/nuauth.conf
	cp $(CURDIR)/conf/acls.nufw $(CURDIR)/debian/$@/etc/nufw20/
	cp $(CURDIR)/conf/users-plaintext.nufw $(CURDIR)/debian/$@/etc/nufw20/
	cp $(CURDIR)/conf/periods.xml $(CURDIR)/debian/$@/etc/nufw20/
	pwd
#	dh_install -p$@ -P$(b)/$@
#	dh_installmenu
	dh_installdebconf -p$@ -P$(b)/$@
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installcron
#	dh_installinfo
	dh_link -p$@ -P$(b)/$@
	dh_strip -p$@ -P$(b)/$@
	dh_compress -p$@ -P$(b)/$@
	dh_fixperms -p$@ -P$(b)/$@
	dh_installinit -p$@ -P$(b)/$@ -u"start 40 2 3 4 5 . stop 89 0 1 6 ."
	dh_installman -pnuauth20 doc/nuauth.1
#	dh_perl
#	dh_python
	dh_makeshlibs -p$@ -P$(b)/$@ -n
	dh_installdeb -p$@ -P$(b)/$@
	dh_shlibdeps -p$@ -P$(b)/$@
	dh_gencontrol -p$@ -P$(b)/$@
	dh_md5sums -p$@ -P$(b)/$@
	dh_builddeb -p$@ -P$(b)/$@

